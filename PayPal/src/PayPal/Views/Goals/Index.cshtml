@model IEnumerable<PayPal.Models.FinanceModel.Goal>

@{
    ViewData["Title"] = "Index";
}
<div class="transbox">
    <h2>Goals</h2>

    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CompletionPercent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExpectedCareerLength)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExpectedTotalDaily)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RealisticTotalDaily)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.YearlyGoalIncome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.YearlyIncome)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CompletionPercent)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ExpectedCareerLength)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ExpectedTotalDaily)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RealisticTotalDaily)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.YearlyGoalIncome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.YearlyIncome)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </table>
</div>
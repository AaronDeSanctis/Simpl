@model PayPal.Models.FinanceModel.Transaction

@{
    ViewData["Title"] = "Create";
}
<div class="transbox">
    <h2>Create</h2>

    <form asp-action="Create">
        <div class="form-horizontal">
            <h4>Transaction</h4>
            <hr />
            <div asp-validation-summary="ValidationSummary.ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AmountReceived" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="AmountReceived" class="form-control" />
                    <span asp-validation-for="AmountReceived" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="CustomerId" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <select asp-for="CustomerId" class="form-control"></select>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Date" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="Date" class="form-control" />
                    <span asp-validation-for="Date" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
    </form>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>

    @section Scripts {
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    }
</div>
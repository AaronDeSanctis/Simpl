@model IEnumerable<PayPal.Models.FinanceModel.Customer>

@{
    ViewData["Title"] = "Index";
}
<div class="transbox">
    <h2>Customers</h2>

    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AmountSpent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AverageReturnValue)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsRegularCustomer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PurchaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RespondsToUpselling)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SatisfactionPercent)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.AmountSpent)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AverageReturnValue)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsRegularCustomer)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PurchaseDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RespondsToUpselling)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SatisfactionPercent)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </table>
</div>